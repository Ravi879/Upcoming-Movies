<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppThemeRatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/rating_bar_normal</item>
        <item name="colorControlActivated">@color/rating_bar_activated</item>
        <item name="colorControlHighlight">@color/rating_bar_activated</item>
    </style>


    <style name="movie_detail_tv">
        <item name="android:layout_marginTop">@dimen/movie_detail_tv_y_margin</item>
        <item name="android:layout_marginBottom">@dimen/movie_detail_tv_y_margin</item>
        <item name="android:layout_marginStart">@dimen/movie_detail_tv_x_margin</item>
        <item name="android:layout_marginEnd">@dimen/movie_detail_tv_x_margin</item>
        <item name="android:textSize">17sp</item>
    </style>


    <style name="movie_detail_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/white_dull</item>
    </style>

</resources>
